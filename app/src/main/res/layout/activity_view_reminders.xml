<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:background="@color/GVWhite"
    tools:context="edu.gvsu.cis350.reminder.ViewReminders"

    android:weightSum="1">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/reminderListView"
        android:layout_gravity="top"
        android:layout_weight="0.37"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/appTitle"
        android:background="@color/GVWhite"
        android:layout_alignParentBottom="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remind-R"
        android:id="@+id/appTitle"
        android:textSize="48dp"
        android:textColor="@color/GVWhite"
        android:background="@color/GVBlue"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_add"
        app:backgroundTint="@color/GVBlue"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="27dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp" />

</RelativeLayout>

